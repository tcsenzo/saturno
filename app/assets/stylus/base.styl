@require 'common/variables'
@require 'common/mixins'
@require 'common/components'
@require '_partials/*'

body
  font-family: hindGuntur
  font-size: base-font-size
  background-color: bg-color
a
  color: inherit
  text-decoration: none
  font-weight: 900
  display: inline-block
  default-transition()
  &:active
    transform: translateY(1px)
  &:hover
    color: inherit


ul, li
  list-style: none
  clearfix()

.page-wrapper
  margin-top: 100px

.before-container
  width: 100%
  margin: 0 auto

.container
  default-transition()
  box-sizing: border-box
