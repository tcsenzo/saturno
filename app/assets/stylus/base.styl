@require 'layout/reset'
@require 'common/variables'
@require 'common/mixins'
@require 'common/components'
@require '_partials/*'

body
  font-family: font
h1
  font-size: title-font-size
a
  text-decoration: none
  font-weight: 900
  color: link-color
  display: inline-block
  default-transition()
  &:active
    transform: translateY(1px)

.page-container
  display: block
  width: 960px
  margin: 0 auto
  background-color: _grey
  overflow: hidden
  default-transition()
