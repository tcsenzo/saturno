.btn
  text-decoration: none
  display: inline-flex
  align-items: center
  background-color: button-default-bg-color
  color: button-default-color
  font-weight: 900
  padding: 10px
  border-radius: 3px
  text-transform: uppercase
  box-shadow: 0px 5px 0px 0px darken(button-default-bg-color, 20%)
  box-sizing: border-box
  transition: all 0.1s
  font-size: button-font-size

  .fa
    margin-right: 8px
    font-size: button-icon-font-size

  &:active
    box-shadow: 0px 3px 0px 0px darken(button-default-bg-color, 25%)
    transform: translateY(2px)
