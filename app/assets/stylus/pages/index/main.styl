@require '../../base'
@require './_partials/_mixins'

.header
  background-color: transparent
  .background-animation
    height: 0

.search-container
  background: url('/assets/images/header.jpg') no-repeat center 55%
  height: 242px
  background-size: cover

.search-form-container
  text-align: center
  padding-top: 135px
  .btn
    letter-spacing: 2px
    padding: 14px
  .search-input
    width: 460px
    margin-right: 15px
    padding: 10px

.page-wrapper
  margin-top: 0

.row
  margin: 6px 0

.events-list-container
  margin: 20px 0

  .events-list
    padding-left: 0

  .events-list-title
    margin: 0 0 10px 15px
    font-size: 16px
    font-weight: bold

  .event-link:hover
    text-decoration: none

  .event-item
    border: 1px solid _medium_grey
    back-box-shadow()
    default-transition()
    &:hover
      transform: scale(1.05,1.05)
    .image
      width: 100%
      height: 94px
      display: block
    .event-contents
      background-color: #fff
      padding: 12px
    .title
      display: block
      font-size: 18px
      font-weight: bold
      margin-bottom: 16px
    .date
      display: block
      font-size: 16px
      margin-bottom: 16px
      font-weight: normal
    .old-price
      display: block
      font-size: 14px
      text-decoration: line-through
      font-weight: normal
    .price
      display: block
      font-size: 18px
      font-weight: bold
      color: main-color
