@require '../../base'
@require './_partials/_mixins'

.search-container
  height: 300px
  col(1)

.row
  cf()
  margin-top: 10px
  .highlight
    height: 150px
  &.double .highlight
    col(1/2)
    stack-mobile-highlight()
  &.triple .highlight
    col(1/3)
    stack-mobile-highlight()
  &.quadruple .highlight
    col(1/4)
    +below(breakpoint-tablet)
      col(1/2, cycle: 2)
      &:first-child
        margin-bottom: 10px
    stack-mobile-highlight()
