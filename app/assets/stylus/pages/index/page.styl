@require '../../base'
@require './_partials/_mixins'

border-dotted()
  border: 4px dotted #ccc

.search-container
  height: 300px
  col(1)
  box-sizing: border-box
  border-dotted()

.row
  cf()
  margin-top: 10px
  .highlight
    height: 150px
    box-sizing: border-box
    border-dotted()
  &.double .highlight
    col(1/2)
    stack-mobile-highlight()
  &.triple .highlight
    col(1/3)
    stack-mobile-highlight()
  &.quadruple .highlight
    col(1/4)
    +below(breakpoint-tablet)
      col(1/2, cycle: 2)
      &:first-child
        margin-bottom: 10px
    stack-mobile-highlight()
