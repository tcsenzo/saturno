div.menu-toggle
  each line in [0,1,2]
    div.line
div.logo
  ='Qettal'
nav.menu-user
  if session.authorizedUser
    ul.inline-list
      li.list-item
        a(href="#") #{session.authorizedUser.name}
      li.list-item
        form(method="POST" action="/logout")
          button(type="submit")= t("header.logout")
  else
    ul.inline-list
      li.list-item
        a(href="/login")= t('header.login')
      li.list-item
        a(href="/cadastro")= t('header.signin')
div.background-animation
