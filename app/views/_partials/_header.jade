div.container
  div.default-header
    div.menu-toggle.visible-xs
      each line in [0,1,2]
        div.line
    div.logo
      a(href="/")= 'Qettal'
      
    nav.menu-user.visible-xs
      ul.inline-list
        li.list-item.search-btn
          a(href="#")
            | #{t('menu.search')}
            i.fa.fa-search
            
    nav.menu-user.hidden-xs
      ul.inline-list
        li.list-item.search-btn
          a(href="#")
            | #{t('menu.search')}
            i.fa.fa-search
        if loggedUser
          li.list-item.glow
            a(href="/historico")
              | #{t('menu.purchasesHistoy')}
              i.fa.fa-ticket
          li.list-item.separator |
          li.list-item
            a(href="/perfil") #{cookies.qettalLoggedUser}
          li.list-item
            form(method="POST" action="/logout")
              button(type="submit").logout-button= t("header.logout")
        else
          li.list-item
            a(href="/login")= t('header.login')
          li.list-item
            a(href="/cadastro")= t('header.signup')
  div.search-header
    form(action="/busca")
      div.search-input-container
        input(type="text" name="q" placeholder="#{t('menu.search')}").search-input
        button(type="submit").search-icon
          i.fa.fa-search
div.background-animation
