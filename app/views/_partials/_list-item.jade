div.col-md-3.col-sm-4.col-xs-6: a(href="/evento/#{event.id}").event-link: li.event-item
  div.image-container
    img(src="#{event.image}").image.img-responsive
  div.event-contents
    div.event-title #{event.name}
    div.theater #{event.theater.name}
    div.date= helpers.moment.systemToHuman(event.scheduled_date)
    div.old-price= helpers.numeral.real(event.original_price)
    div.price= helpers.numeral.real(event.price)
