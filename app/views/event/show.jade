extends /base

block container
  if alert
    include /shared/alert
  div.row
    div.col-md-5: div.event-image
      img(src="http://placekitten.com/g/450/300").image
    div.col-md-7
      h1.title.event-name #{event.name}
      div.event-price-container
        div: span.old-price= t('event.from') + helpers.numeral.real(event.price)
        div: span.price= t('event.to') + helpers.numeral.real(event.price)
        form(action="#").buy-ticket-form.form-horizontal
          div.form-group
            div.buy-ticket-container.col-md-12
              button(type="submit").btn.btn-default.btn-buy
                i.fa.fa-shopping-cart
                | #{t('event.buy')}
          div.form-group
            div.special-ticket.col-md-4
              label(for="ticketType")= t('event.ticketType')
              select(name="ticketType").form-control.special-ticket-field
                each option, i in config.specialTicketOptions
                  option(value=i) #{option}
            div.special-ticket.col-md-2
              label(for="ticketAmount")= t('event.ticketAmount')
              input(type="text" name="ticketAmount").form-control
      div.event-detail-container
        span.detail.event-date= helpers.dateFormat.format(event.scheduled_date, 'dd/mm/yyyy, HH:MM')
        h2.detail.theater-name #{event.theater.name}
        h2.detail.theater-address 
          a(href="#")
            | #{event.theater.address.street + ', ' + event.theater.address.number}
            i.fa.fa-map-marker.map-icon
  div.row
    div.col-md-12
      div.event-description-container
        div.description-title= t('event.description')
        div.description: p #{event.description}
        
      
