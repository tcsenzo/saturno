div.slide-item: a(href="/evento/#{e.id}").event-link: li.event-item
  div.image-container
    img(src="#{e.image}").image.img-responsive
  div.event-contents
    div.event-title #{e.name}
    div.date= helpers.moment.systemToHuman(e.scheduled_date)
    div.old-price= helpers.numeral.real(e.original_price)
    div.price= helpers.numeral.real(e.price)
